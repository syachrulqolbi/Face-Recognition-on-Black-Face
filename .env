# =======================
# Database
# =======================
# Set the full DSN if you know it; otherwise leave blank and use the parts below.
DB_DSN=postgresql://postgres:12345678@pgvec:5432/mydb
DB_SCHEMA=public
DB_TABLE=faces

# If you omit DB_DSN, these will be used to build one:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=12345678
# POSTGRES_DB=mydb
# PGHOST=localhost
# PGPORT=5432

# =======================
# Paths / Model
# =======================
ARCFACE_ONNX=models/glintr100.onnx
QUERY_ROOT=data/query
REPS_DIR=reps

# =======================
# Artifacts (outputs)
# =======================
OUT_FAISS=gallery_flat.faiss
OUT_NPY=gallery_full.npy
OUT_TXT=gallery_ids.txt

# =======================
# Runtime
# =======================
TOPK=5
BATCH=64
SAVE_REPS=true
# e.g. "align,grayworld,msr"
PREPROC_PIPELINE=

# true  = use face alignment (align_to_arcface)
# false = skip alignment, just resize/crop to model size
USE_ALIGNMENT=false

# =======================
# ONNX Runtime (optional)
# =======================
# auto | cpu | cuda | dml
ORT_PROVIDER=auto
ORT_FORCE_CPU=false
# 0 = auto (all cores)
ORT_THREADS=0
