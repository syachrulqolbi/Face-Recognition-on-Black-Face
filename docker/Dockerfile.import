# docker/Dockerfile.import
# Minimal image to import FACES.dbf -> Postgres (only nik + face)

FROM python:3.11-slim

# Keep image small; install only what we need
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Python libs
RUN pip install --no-cache-dir \
    dbfread==2.0.7 \
    psycopg2-binary==2.9.9

WORKDIR /app
COPY app/import_dbf_to_postgres.py /app/import_dbf_to_postgres.py
